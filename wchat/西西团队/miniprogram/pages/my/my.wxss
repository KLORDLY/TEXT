.mytotal {
  /* overflow-y: hidden; */
}

.myimage {
  width: 100%;
  height: 372rpx;
}

.mymain {
  height: 100rpx;
  line-height: 100rpx;
}

.userinfo-avatar {
  position: absolute;
  z-index: 2;
  margin-top: -30%; 
  width: 150rpx;
  height: 150rpx;
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  border-radius: 50%;
  -webkit-box-shadow: 0 3px 5px rgba(0, 0, 0, 0.3);
  -moz-box-shadow: 0 3px 5px rgba(0, 0, 0, 0.3);
  box-shadow: 0 3px 5px rgba(0, 0, 0, 0.3);
  background-size: cover;
  background-color: white;
}

.username,.usernametip {
  position: absolute;
  z-index: 2;
  margin-top: -15%;
  text-align: center;
  font-size: 32rpx;
  color: white;
  height: 100rpx;
  line-height: 100rpx;

}

.userinfo{
  display: flex;

  flex-direction: column;

  justify-content: center;

  align-items: center;
}


.userthreeshow{
  position: absolute;
  z-index: 2;
  margin-top: -13%;
  margin-left: 16%;
}

.userthreeshow navigator{
 font-size: 32rpx;
  color: white;
  display: inline-block;
  flex-direction: row;
  margin-left: 18px;
}

.nav-tabs{
  width: 100%;
  height: 75rpx;
  display: flex;   
}

.tab-content{
  flex: 1;
}

.default{
    line-height:75rpx;
    text-align:center;
    flex:1;
    border-bottom:1px solid #eee;
    color:#000;
    font-weight:bold;
    font-size:28rpx;  
}
.active{
    line-height:75rpx;
    text-align:center;
    color:#fc5558;
    flex:1;
    border-bottom:1px solid red;
    font-weight:bold;
    font-size:28rpx;
}

.threeshowcontent{
  margin-top: 0;
  margin-left: 0;
  width: 100%;
  height: 100%;
}