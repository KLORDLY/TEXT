/* pages/push/push.wxss */

.pushcontainer {
  border-top: 1px solid #fafafa;
}

form {
  display: block;
  width: 90%;
  height: 100%;
  padding: 50rpx 40rpx 0;
}

.pushtitle {
  width: 100%;
  height: 102rpx;
  font-size: 36rpx;
  color: #000;
  font-weight: 500;
  border-bottom: 1px solid #b3b3b3;
}

.pushtitleclass{
  font-size: 36rpx;
      color: #b2b2b2;
      font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif; 
}

textarea{
      width: 100%;
      font-size: 34rpx;
      display: block;
      color: #000;
      border-bottom: 1px solid #FAFAFA;
      height: 400rpx !important;
      /* !important表示高优先级 */
      padding-top: 24rpx;
      -webkit-border-radius: 5rpx;
      -moz-border-radius: 5rpx;
      border-radius: 5rpx;
      font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif; 
}

.pushimage{
      width: 128rpx;    
      height: 128rpx;
      display: inline-block;
      -webkit-border-radius: 15rpx;
      -moz-border-radius: 15rpx;
      border-radius: 15rpx;
      margin-right: 10rpx; 
}

.btn-upload {
      width: 128rpx;
      display: inline-block;
      background-color: #e4e4e4;
      height: 128rpx;
      text-align: center;
      line-height: 128rpx;
      margin-left: 70%;
      padding: 0;
      color: #fafafa;
      -webkit-transition: all .4s;
      -moz-transition: all .5s;
      -ms-transition: all .5s;
      -o-transition: all .5s;
      transition: all .5s; 
  }


.button-hover {
      background-color: rgb(201, 201, 201);
      color: white; }

.tip{
color: #000;
font-size: 30rpx;
}

.btnsumbit_b,.btnreset_b{
      float: left;
      width: 180rpx;
      background-color: rgb(255, 255, 255);
      -webkit-border-radius: 10rpx;
      -moz-border-radius: 10rpx;
      border-radius: 10rpx;
      height: 60rpx;
      line-height: 60rpx;
      font-size: 25rpx;
      text-align: center;
      color: #312222;
      -webkit-transition: all .15s;
      -moz-transition: all .15s;
      -ms-transition: all .15s;
      -o-transition: all .15s;
      transition: all .15s; 
      margin-top: 12px;
      margin-left: 16%;
}

.btnreset_b{
  margin-left: 16px;
}



.btn_a{
  color: white;
  background-color: rgb(201, 201, 201);
}


