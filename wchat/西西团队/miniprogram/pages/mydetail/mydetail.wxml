

<view class='mydetailtotal'>
<view class='bgm'>
    <image class='bgm' src='/images/bgm.jpg'></image>
</view>

  <view class='userinfo'>
    <view class='userinfo-avatar'>
      <open-data type="userAvatarUrl"></open-data>
    </view>

    <open-data type="userNickName"></open-data>
  </view> 

  <scroll-view scroll-y="true">

    <view class="userinfo-list">
      <view class="list-item" wx:for="{{userinfoList}}">
        <text class="item-text" space="emsp">{{item.text}}</text>

        <view class='list_img'>
          <image src='/images/to.png'></image>
        </view>

      </view>

       
           

    </view>

  </scroll-view>



</view>